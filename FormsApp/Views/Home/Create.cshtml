@model Product

@{
    ViewData["Title"] = "Create Form";
}



<form asp-controller="Home" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All">

    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" value="" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Price"></label>
        <input asp-for="Price" class="form-control" value="" />
        <span asp-validation-for="Price"></span>

    </div>
    <div class="input-group mb-3">
        
        <input type="file" name="imageFile" value="imageFile" class="form-control" />


    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option value="">Hepsi</option>

        @*     @foreach (var item in ViewBag.Categories) uzun kullanım items ile kısalır
            {
                <option value="@item.CategoryId">@item.Name</option>

            } *@




        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="IsActive" class="form-check-input" value="" />
        <label asp-for="IsActive" class="form-label">Aktif</label>
        <br />
        <span asp-validation-for="IsActive"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

